<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Command</th>
      <th>
        <%= link_to new_admin_command_path, class: "pull-right" do %>
          <i class="glyphicon glyphicon-plus"></i>
        <% end %>

        Actions
      </th>
    </tr>
  </thead>

  <tbody>
    <% @commands.each do |command| %>
      <tr>
        <td>
          <pre><%= command.command.truncate(30) %></pre>
        </td>
        <td>
          <%= link_to edit_admin_command_path(command) do %>
            <i class="glyphicon glyphicon-edit"></i>
          <% end %>

          <%= link_to admin_command_path(command), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>
