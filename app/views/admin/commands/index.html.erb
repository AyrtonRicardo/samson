<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Command</th>
      <th>Project</th>
      <th>
        Actions
      </th>
    </tr>
  </thead>

  <tbody>
    <% @commands.each do |command| %>
      <tr>
        <td>
          <pre><%= command.command.truncate(30) %></pre>
        </td>
        <td><%= command.project.try(:name) ? command.project.name : "Global" %></td>
        <td>
          <%= link_to "Edit", edit_admin_command_path(command) %>
          |
          <%= link_to "Delete", admin_command_path(command), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>
 <%= link_to "New command", new_admin_command_path, class: "btn btn-default" %>
