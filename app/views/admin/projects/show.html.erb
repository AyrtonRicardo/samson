<% if @projects.empty? %>

  <div class="alert alert-warning alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    You currently don't have any projects setup.
  </div>

<% else %>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <%= render partial: "project", collection: @projects %>
    </tbody>
  </table>

<% end %>

<%= paginate @projects %>
<%= link_to "Add a new project", new_project_path, class: "btn btn-default" %>


<% if Lock.global.exists? %>
  <%= link_to "Unlock all projects", admin_lock_path, class: "btn btn-info", method: :delete %>
<% else %>
  <%= link_to "Lock all projects", admin_lock_path, class: "btn btn-warning", method: :post %>
<% end %>
