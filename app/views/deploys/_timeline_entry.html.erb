<div class="timeline-entry clearfix" ng-repeat="entry in entries">
  <div ng-if="entry.time.date != entries[$index - 1].time.date">
    <div class="timeline-date">{{entry.time.day + ", " + entry.time.year + " " + entry.time.month + " " + entry.time.date}}</div>
    <hr>
  </div>
  <header class="col-md-2">
    <div class="timeline-time">
      {{dayTime(entry.time)}}
    </div>
    <img class="gravatar img-square" ng-src="{{entry.gravatarURL}}" alt="Gravatar">
  </header>
  <div class="timeline-project col-md-2 bg-{{transformStatus(entry.status)}}">
    <div class="v-text">
      {{entry.projectName}}
    </div>
  </div>
  <div class="timeline-content col-md-6 bg-light-{{transformStatus(entry.status)}}">
    <div class="v-text">
      {{entry.summary}}
    </div>
  </div>
</div>
