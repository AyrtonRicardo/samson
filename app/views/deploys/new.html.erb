<%= form_for :deploy, url: project_deploys_path(@project), html: { class: "form-horizontal" } do |form| %>
  <fieldset>
    <legend>Deploy</legend>
    <div class="form-group">
      <%= form.label :commit, "Tag or SHA", class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= form.text_field :commit, class: "form-control", placeholder: "e.g. v2.1.43, master, fa0b4671" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :stage_id, "Stage", class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= form.select :stage_id, options_from_collection_for_select(@project.stages, :id, :name), {}, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <button type="submit" class="btn btn-danger">Go!</button>
      </div>
    </div>
  </fieldset>
<% end %>
