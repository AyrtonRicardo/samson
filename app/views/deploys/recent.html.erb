<h1>Filters</h1>

<div class="timeline" ng-controller="TimelineCtrl" timeline-scroll>
  <div class="timeline-filter">
    <label for="tlf-project">Project: <input id="tlf-project" type="text" ng-model="search.project.name"></label>
  </div>
  <div class="timeline-filter">
    <label for="tlf-user">User: <input id="tlf-user" type="text" ng-model="search.user.name"></label>
  </div>
  <div class="timeline-filter">
    <label for="tlf-user-type">
      <select id="tlf-user-type" ng-model="userType" ng-options="option for option in userTypes">
        <option value="">All</option>
      </select>
    </label>
  </div>
  <div class="timeline-filter">
    <label for="tlf-prod">Stage:
      <select id="tlf-prod" ng-model="stageType" ng-options="value as key for (key, value) in stageTypes">
        <option value="">All</option>
      </select>
    </label>
  </div>
  <div class="timeline-filter">
    <label for="tlf-status">Status:
      <select id="tlf-status" ng-model="deployStatus" ng-options="status for status in deployStatuses">
        <option value="">All</option>
      </select>
    </label>
  </div>
  <section>
    <%= render partial: "timeline_entry" %>
    <%# if there is not enough height for scrolling %>
    <div ng-if="shortWindow()">
      <hr>
      <span class="btn btn-default" ng-click="timelineDeploys.loadMore()">Load More .. {{timelineDeploys.page}}</span>
    </div>
  </section>
</div>
