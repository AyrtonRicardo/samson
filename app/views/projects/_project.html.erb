<div class="col-6 col-sm-4 col-lg-4">
  <div class="panel">
    <div class="panel-heading text-center">
      <%= link_to project_path(project), class: "pull-right" do %>
        <i class="glyphicon glyphicon-play-circle"></i>
      <% end %>

      <%= link_to edit_project_path(project), class: "pull-left" do %>
        <i class="glyphicon glyphicon-edit"></i>
      <% end %>

      <%= project.name %>
    </div>

    <% project.job_locks.each do |lock| %>
      <p>
      Locked for <%= lock.environment %>
      <% if lock.job_history_id %>
        by a <%= link_to "running job", "#" %>
      <% else %>
        until <%= lock.expires_at %>
      <% end %>
    </p>
    <% end %>

    <!-- p>Last five jobs:</p-->
  </div>
</div>
