<h1 class="project_title"><%= project.name %></h1>

<%= render partial: "shared/project_tabs",
           locals: { active: "overview" } %>

<div class="col-md-6">
  <h2>Stages</h2>
    <table class="project-stages table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Last Deploy By</th>
          <th>Last Deployed Reference</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "stage", collection: @stages %>
      </tbody>
  </table>
</div>

<div class="col-md-6">
  <h2>Recent deploys</h2>
    <table class="table table-condensed table-striped recent-deploys">
      <thead>
        <tr>
          <th>When</th>
          <th>Who</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "deploy", collection: @deploys %>
      </tbody>
  </table>
  <div class="page-container">
    <%= paginate @deploys %>
  </div>
</div>
