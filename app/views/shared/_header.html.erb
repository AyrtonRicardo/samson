<div class="navbar navbar-default">
  <%= link_to "Zendesk Deployer", root_path, class: "navbar-brand" %>

  <ul class="nav navbar-nav">
    <li><%= link_to "Job History", jobs_path %></li>
    <li><%= link_to "Current Deploys", active_jobs_path %></li>

    <% if current_user.is_admin? %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to "Projects", admin_projects_path %></li>
          <li><%= link_to "Users", admin_users_path %></li>
        </ul>
      </li>
    <% end %>
  </ul>

  <button type="button" class="btn btn-default navbar-btn pull-right">
    <% if logged_in? %>
      <%= link_to "Logout", logout_path, title: "Logged in as #{current_user.name}" %>
    <% else %>
      <%= link_to "Login", login_path %>
    <% end %>
  </button>
</div>
