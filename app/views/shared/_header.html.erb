<div class="navbar navbar-default">
  <%= link_to "Pusher", root_path, class: "navbar-brand" %>

  <ul class="nav navbar-nav">
    <% if current_user %>
      <li><%= link_to "Deploy History", deploys_path %></li>
      <li><%= link_to "Current Deploys", active_deploys_path %></li>
    <% end %>

    <% if current_user.try(:is_admin?) %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to "Projects", admin_projects_path %></li>
          <li><%= link_to "Commands", admin_commands_path %></li>
          <li><%= link_to "Users", admin_users_path %></li>
        </ul>
      </li>
    <% end %>
  </ul>

  <div class="navbar-btn pull-right">
    <% if logged_in? %>
      <% if revision %>
        <%= link_to revision[0..7], "https://github.com/zendesk/pusher/commit/#{revision}", title: "Pusher release commit", class: "btn btn-default" %>
      <% end %>

      <%= link_to "Logout", logout_path, title: "Logged in as #{current_user.name}", class: "btn btn-default" %>
    <% end %>
  </div>
</div>
